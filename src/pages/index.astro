---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';


---

<Layout 
	title="Porfolio de Jorge - Desarrollador y Programador Web."
	description="Contrata a Jorge para crear tu aplicación web o movil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones">
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img  class="rounded-full size-12 mb-4" src="https://media.licdn.com/dms/image/D4D35AQG557sjFZnKzg/profile-framedphoto-shrink_400_400/0/1701372283914?e=1704229200&v=beta&t=LU6tsbfiV0MafAiKxKRKE2o_CqWd4PnWuGut5lHyEpo" alt ="mi photo"/>
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
				Hey soy Jorge <a 
								href="https://www.linkedin.com/in/jorge-macias-vera-879187236/" 
								target="_blank" 
								rel="noopener" 
								class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>+1 año de experiencia.</span> <span class="text-yellow-200/90">Desarrollador Web y Creador de Contenido</span>. <span class="text-ted-200/90">De Soria, España.</span> 
				<span class="opacity-85">Especializado en crear aplicaciones unicas.</span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/jorge-macias-vera-879187236/">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://www.linkedin.com/in/jorge-macias-vera-879187236/">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="https://www.linkedin.com/in/jorge-macias-vera-879187236/">
					<MailIcon class="size-4 md:size-6" />
					jmv61096@gmail.com
				</SocialPill>

			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia laboral</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="experiencia">
			
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos</h2>
			<Projects />
		</SectionContainer>
		
	</main>
</Layout>

